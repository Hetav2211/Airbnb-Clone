      <svg
        class="w-7 h-7"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>
    <!-- Mobile Menu -->
    <div class="md:hidden w-full mt-4 hidden" id="nav-menu">
      <div class="bg-white/10 rounded-2xl p-4 backdrop-blur-sm shadow-xl">
        <% if (isLoggedIn) { %> <% if (user && user.usertype === 'host') { %>
