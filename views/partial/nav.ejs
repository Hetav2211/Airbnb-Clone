<header
  class="bg-gradient-to-r from-red-500 via-red-600 to-red-500 text-white shadow-lg"
>
  <nav
    class="container mx-auto flex flex-wrap items-center justify-between py-4 px-6"
  >
    <div class="flex items-center space-x-8">
      <a
        href="/"
        class="transform hover:scale-105 transition-all duration-300 flex items-center"
      >
        <span
          class="text-2xl md:text-3xl font-bold tracking-tight bg-gradient-to-r from-white to-red-100 bg-clip-text text-transparent drop-shadow-sm hover:drop-shadow-lg"
        >
          airbnb
        </span>
      </a>
      <ul class="hidden md:flex space-x-1 lg:space-x-4 font-medium">
        <% if (isLoggedIn) { %> <% if (user && user.usertype === 'host') { %>
        <!-- Host Navigation -->
        <li class="group">
          <a
            href="/host/add-home"
            class="<%= currentPage === 'addHome' ? 'bg-white/20 text-white' : 'hover:bg-white/10' %> py-2 px-4 rounded-full transition-all duration-300 flex items-center space-x-2 group-hover:shadow-md"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
              />
            </svg>
            <span>Add Home</span>
          </a>
        </li>
        <li class="group">
          <a
            href="/host/host-home-list"
            class="<%= currentPage === 'host-homes' ? 'bg-white/20 text-white' : 'hover:bg-white/10' %> py-2 px-4 rounded-full transition-all duration-300 flex items-center space-x-2 group-hover:shadow-md"
