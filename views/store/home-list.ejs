<%-include('../partial/head') %>
  </head>

  <body class="bg-gray-50">
    <%-include('../partial/nav') %>
    
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-red-500 to-red-600 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Registered Properties</h1>
          <p class="text-lg md:text-xl opacity-90">Discover our collection of beautiful homes</p>
        </div>
      </div>
    </div>

    <main class="container mx-auto px-4 py-12 -mt-8">
      
      <!-- Property Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
          <div class="flex flex-col md:flex-row">
            <div class="relative md:w-2/5">
              <img
                src="<%= home.photo %>"
                alt="<%= home.housename %>"
                class="w-full h-64 md:h-full object-cover"
              />
              <div class="absolute top-4 right-4">
                <%- include('../partial/favourite',{home:home}) %>
              </div>
            </div>
            
            <div class="p-6 flex flex-col justify-between md:w-3/5">
              <div>
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-2xl font-semibold text-gray-900">
                    <%= home.housename %>
                  </h3>
                  <div class="flex items-center bg-yellow-50 px-3 py-1 rounded-full">
                    <span class="text-yellow-500 text-lg mr-1">â˜…</span>
                    <span class="font-semibold text-gray-700"><%= home.rating %></span>
                  </div>
                </div>

                <div class="space-y-3">
                  <p class="text-gray-600 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <%= home.location %>
                  </p>
                  <p class="text-2xl font-bold text-gray-900">
                    $<%= home.price %> <span class="text-sm font-normal text-gray-500">/ night</span>
                  </p>
                </div>
              </div>

              <div class="mt-6 flex gap-3">
                <a href="/homes/<%= home._id %>" 
                   class="flex-1 px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg font-semibold text-center hover:from-red-600 hover:to-red-700 transform hover:-translate-y-0.5 transition-all duration-300">
                  View Details
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <nav class="inline-flex rounded-lg border border-gray-200 divide-x divide-gray-200">
          <button class="px-4 py-2 text-gray-600 hover:text-red-500 hover:bg-red-50 transition-colors duration-300">
            Previous
          </button>
          <button class="px-4 py-2 text-white bg-red-500">1</button>
          <button class="px-4 py-2 text-gray-600 hover:text-red-500 hover:bg-red-50 transition-colors duration-300">2</button>
          <button class="px-4 py-2 text-gray-600 hover:text-red-500 hover:bg-red-50 transition-colors duration-300">3</button>
          <button class="px-4 py-2 text-gray-600 hover:text-red-500 hover:bg-red-50 transition-colors duration-300">
            Next
          </button>
        </nav>
      </div>
    </main>
  </body> 
</html>
