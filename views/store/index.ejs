<%-include('../partial/head') %>
  </head>

  <body>
    <%-include('../partial/nav') %>
    <main
      class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl"
    >
      <h2 class="text-5xl text-gray-800 font-bold text-center mb-10">
        Welcome to Airbnb page
      </h2>
      <div class="grid grid-cols-1 gap-8">
        <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row hover:scale-105 transition-transform duration-300">
          <img
        src="<%= home.photo %>"
        alt="<%= home.housename %>"
        class="w-full md:w-64 h-56 object-cover"
          />
          <div class="p-6 flex flex-col justify-between flex-1">
        <div>
          <h3 class="text-2xl font-semibold text-gray-900 mb-2">
            <%= home.housename %>
          </h3>
          <p class="text-gray-500 mb-1">
            <span class="font-medium text-gray-700">Location:</span>
            <%= home.location %>
          </p>
          <p class="text-gray-500 mb-1">
            <span class="font-medium text-gray-700">Price:</span>
            $<%= home.price %> / night
          </p>
          <div class="flex items-center mt-2">
            <span class="text-yellow-400 text-xl mr-1">â˜…</span>
            <span class="text-gray-700 font-medium"><%= home.rating %></span>
            <span class="ml-2 text-sm text-gray-400">/ 5</span>
          </div>
        </div>
        <button class="mt-6 bg-blue-600 text-white px-5 py-2 rounded-lg font-semibold shadow hover:bg-blue-700 transition">
          Book Now
        </button>
          </div>
        </div>
        <% }) %>
      </div>
        </li>
    
      </ul>
    </main>
  </body> 
</html>
